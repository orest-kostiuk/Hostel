= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .d-flex.justify-content-center
    .form-group.col-md-4
      = f.label :login_code
      = f.text_field :login_code, class: 'form-control'
  .d-flex.justify-content-center
    .form-group.col-md-4
      = f.label :email
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'
  .d-flex.justify-content-center
    .form-group.col-md-4
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'form-control'
  .d-flex.justify-content-center
    .form-group.col-md-4
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
  .d-flex.justify-content-center
    .col-md-4
      = f.submit "Sign up", class: 'btn btn-success btn-block'
      %br
  .d-flex.justify-content-center
    .col-md-4
      = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'btn btn-secondary btn-block'

