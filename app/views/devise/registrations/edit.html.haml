%h2
  Edit #{resource_name.to_s.humanize}
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .col-md-12
    .row
      .form-group.col-md-4
        = f.label :first_name
        %br/
        = f.input_field :first_name, disabled: current_user.completed?, class: 'form-control'
      .form-group.col-md-4
        = f.label :surname
        %br/
        = f.input_field :surname, disabled: current_user.completed?, class: 'form-control'
      .form-group.col-md-4
        = f.label :last_name
        %br/
        = f.input_field :last_name, disabled: current_user.completed?, class: 'form-control'
      .form-group.col-md-4
        = f.label :index
        %br/
        = f.input_field :index, class: 'form-control'
      .form-group.col-md-4
        = f.label :region
        %br/
        = f.input_field :region, class: 'form-control'
      .form-group.col-md-4
        = f.label :district
        %br/
        = f.input_field :district, class: 'form-control'
      .form-group.col-md-4
        = f.label :city
        %br/
        = f.input_field :city, class: 'form-control'
      .form-group.col-md-4
        = f.label :street
        %br/
        = f.input_field :street, class: 'form-control'
      .form-group.col-md-4
        = f.label :house_number
        %br/
        = f.input_field :house_number, class: 'form-control'
      .form-group.col-md-4
        = f.label :email
        %br/
        = f.email_field :email, disabled: current_user.completed?, autofocus: true, autocomplete: "email", class: 'form-control'
      .form-group.col-md-4
        = f.label :passport_series
        %br/
        = f.input_field :passport_series, disabled: current_user.completed?, class: 'form-control'
      .form-group.col-md-4
        = f.label :who_issued_the_passport
        %br/
        = f.input_field :who_issued_the_passport, disabled: current_user.completed?, class: 'form-control'
      .form-group.col-md-4
        = f.label :when_issued_the_passport
        %br/
        = f.date_field :when_issued_the_passport, disabled: current_user.completed?, class: 'form-control'
      .form-group.col-md-4
        = f.label :the_taxpayer_identification_number
        %br/
        = f.input_field :the_taxpayer_identification_number, disabled: current_user.completed?, class: 'form-control', id: 'disabledTextInput'
      .form-group.col-md-4
        = f.label :phone_number
        %br/
        = f.input_field :phone_number, disabled: current_user.completed?, class: 'form-control'
      .col-md-4
        = link_to "Back", root_path, class: 'btn btn-primary btn-lg btn-block'
      .col-md-8
        = f.submit "Update", class: 'btn btn-success btn-lg btn-block'
